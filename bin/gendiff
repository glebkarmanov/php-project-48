#!/usr/bin/env php
<?php

namespace Project48\gendiff;

require_once __DIR__ . '/../vendor/autoload.php';

use Docopt;

$doc = <<<DOC
gendiff -h

Generate diff

Usage:
  gendiff (-h|--help)
  gendiff (-v|--version)

Options:
  -h --help                     Show this screen
  -v --version                  Show version

DOC;

$args = Docopt::handle($doc, array('version' => '1.0.0'));

foreach ($args as $k => $v) {
    echo $k.': '.json_encode($v).PHP_EOL;
}